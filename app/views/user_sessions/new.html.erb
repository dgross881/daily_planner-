<%= title "Sign in" %>
<div class= "row">
  <div class="small-12 columns">
  <%= form_tag user_sessions_path do %>
    <%= label_tag :email, "Email Address" %>
    <%= text_field_tag :email, params[:email] %>
   </div>
  </div>
<div class= "row">
  <div class="small-12 columns">
   <%= label_tag :password, "Password" %>
   <%= password_field_tag :password %>
 </div>
</div>
<div class= "row">
  <div class="small-12 columns">
    <%= label_tag :remember_me, "Remember Me?" %>
    <%= check_box_tag :remember_me %>
  </div>
</div>
<div class="rows">
  <div class="small-12 columns">
    <%= submit_tag "Log In", class: "button radius expand" %>
 </div>
<% end %>
</div>
<div class="row">
    <%= link_to "Forgot Password", new_password_reset_path, class:"small-6 columns text-left" %>
    <%= link_to "Sign up", new_user_path, class:"small-6 columns text-right" %>
</div>
